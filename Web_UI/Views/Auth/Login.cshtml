@{
}
@if (ViewData["err"] != null && (bool)ViewData["err"] == true)
{
    <script>
            Swal.fire({
            title: 'Error!',
            text: 'Password is wrong',
            icon: 'error',
            confirmButtonText: 'OK'
        });
    </script>
}

<form asp-controller="Auth" asp-action="Login" method="POST">

    <div class="page-container">

        <div class="containerForLog">

            <!-- İçerik buraya gelecek -->
            <img class="imgPrvt" src="~/image/user.png">
            <input class="inputForLog" name="UserName" placeholder="User Name" style="margin-top: 25px;">
            <input type="password" name="Password" class="inputForLog" placeholder="Password">
            <button class="buttonPrvt">
                Login
            </button>


        </div>
    </div>

</form>

