<script>
    var message = @Html.Raw(Json.Serialize(ViewData["ErrorMessage"]));
    const redirectUrl = '/Book/Index';

    Swal.fire({
        title: 'Error!',
        text: message,
        icon: 'error',
        confirmButtonText: 'OK'
    }).then(() => {
        // Sayfa yenileniyor
        window.location.href = redirectUrl;
    });
</script>

